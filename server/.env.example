# NovaCMS Server Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL=postgresql://novacms_user:strongpassword@localhost:5432/novacms?schema=public

# ==================== SERVER ====================
# Server port
PORT=4000

# Node environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ==================== JWT & AUTHENTICATION ====================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_me_with_a_secure_random_string_min_32_chars

# Token expiration times
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ==================== PASSWORD HASHING ====================
# Bcrypt salt rounds
BCRYPT_SALT_ROUNDS=12

# ==================== STORAGE ====================
# local, s3, gcs, etc.
STORAGE_DRIVER=local

# Local storage path (if using local driver)
STORAGE_LOCAL_PATH=./uploads

# ==================== LOGGING ====================
LOG_LEVEL=debug

# ==================== OPTIONAL: AWS S3 (if using S3 storage) ====================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=
